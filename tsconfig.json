{
  "extends": "astro/tsconfigs/base",
  "compilerOptions": {
    "strictNullChecks": true,
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@assets/*": ["src/assets/*"],
      "@layouts/*": ["src/layouts/*"],
      "@modules/*": ["src/modules/*"],
      "@styles/*": ["src/styles/*"],
      "@data/*": ["src/content/data/*"],
    }
  }
}
